# Database configuration
SUNNY_SQLITE=./data.sqlite

# AI Provider Configuration
# Supported providers: openai, anthropic, google/gemini, mock (for testing)
AI_PROVIDER=google/gemini

# OpenAI Configuration
# OPENAI_API_KEY=your_openai_api_key_here
# Optional: specify model (default: gpt-5)
# AI_MODEL=gpt-5

# Anthropic Configuration (if using Anthropic)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
# AI_MODEL=claude-sonnet-4-5

# Google/Gemini Configuration (if using Gemini)
# GOOGLE_API_KEY=your_google_api_key_here
AI_MODEL=gemini-2.5-pro

# Vercel AI Gateway (optional)
# If you want to use Vercel AI Gateway for unified access, cost tracking, and rate limiting
# AI_GATEWAY_URL=

# Debug mode
DEBUG=1
